@page "/admin/users"
@model UserManagement.API.Pages.Admin.UsersModel
@{
    Layout = "_Layout";
}

<h1>Admin User Dashboard</h1>

<!-- Search Form -->
<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" name="SearchTerm" value="@Model.SearchTerm" placeholder="Search users..." />
                <input type="hidden" name="PageNumber" value="1" />
                <input type="hidden" name="PageSize" value="@Model.PageSize" />
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </div>
    </div>
</form>

@if (Model.HasError)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @Model.ErrorMessage
    </div>
}
else if (Model.UsersData != null)
{
    <!-- Users Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>User ID</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Created At</th>
                    <th>Active</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UsersData.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination Info -->
    <div class="d-flex justify-content-between align-items-center mt-3">
        <div>
            <p class="mb-0">
                Showing @((Model.UsersData.PageNumber - 1) * Model.UsersData.PageSize + 1) 
                to @(Math.Min(Model.UsersData.PageNumber * Model.UsersData.PageSize, Model.UsersData.TotalCount)) 
                of @Model.UsersData.TotalCount users
            </p>
        </div>
        
        <!-- Pagination Controls -->
        @if (Model.UsersData.TotalPages > 1)
        {
            <nav>
                <ul class="pagination mb-0">
                    <!-- Previous Page -->
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?PageNumber=@(Model.PageNumber - 1)&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm">Previous</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Previous</span>
                        </li>
                    }

                    <!-- Page Numbers -->
                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.UsersData.TotalPages, Model.PageNumber + 2); i++)
                    {
                        @if (i == Model.PageNumber)
                        {
                            <li class="page-item active">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" href="?PageNumber=@i&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm">@i</a>
                            </li>
                        }
                    }

                    <!-- Next Page -->
                    @if (Model.PageNumber < Model.UsersData.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?PageNumber=@(Model.PageNumber + 1)&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm">Next</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Next</span>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <p>No users found.</p>
    </div>
}
